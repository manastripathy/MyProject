pipeline {
	agent any
	stages {
			stage('Build Application')
			{
				steps 
				{
					bat 'mvn -f pom.xml clean package'
				}
				post 
				{
					success 
					{
						echo "Now archiving the artifacts ..."
						archiveArtifacts artifacts: '**/*.war' 
					}
				}
			}
			stage('Create tomcat docker image'){
				steps {
					batch 'docker build . -t tomatsamplewebapp:${env.BUILD_ID}'
				}
			}		
			
	}
}
